<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Servlets -->
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>cz.krajcovic.mybike.server.GreetingServiceImpl</servlet-class>
	</servlet>


	<servlet>
		<servlet-name>userServlet</servlet-name>
		<servlet-class>cz.krajcovic.mybike.server.MyUserServiceImpl</servlet-class>
	</servlet>

	<!-- Servlets mappings -->

	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/mybike/greet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/cz.krajcovic.mybike.mybikeJUnit/mybike/greet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>userServlet</servlet-name>
		<url-pattern>/mybike/userService</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>userServlet</servlet-name>
		<url-pattern>/cz.krajcovic.mybike.mybikeJUnit/mybike/userService</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>mybike.html</welcome-file>
	</welcome-file-list>
</web-app>
